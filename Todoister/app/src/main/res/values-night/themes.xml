    <style name="Theme.Todoister" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/royal_blue</item>
        <item name="colorPrimaryVariant">@color/dark_royal_blue</item>
        <item name="colorOnPrimary">@color/light_royal_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/royal_purple</item>
        <item name="colorSecondaryVariant">@color/dark_royal_purple</item>
        <item name="colorOnSecondary">@color/light_royal_purple</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>